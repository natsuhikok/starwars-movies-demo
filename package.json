{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "watch:webpack": "webpack --watch",
    "watch:sass":"./node_modules/.bin/node-sass ./src/styles/all.scss ./public/assets/style.css --source-map-embed --watch",
    "build:webpack": "webpack",
    "build:sass": "./node_modules/.bin/node-sass ./src/styles/all.scss ./public/assets/style.css --source-map-embed",
    "release:webpack": "webpack -p",
    "release:sass": "./node_modules/.bin/node-sass ./src/styles/all.scss ./public/assets/style.css  --output-style compressed",
    "browsersync": "./node_modules/.bin/browser-sync start --server 'public' --files 'public/' --port 3000 --browser firefox",
    "jslint": "./node_modules/.bin/eslint src/js/**/*",
    "clean": "rimraf ./public/assets/",
    "watch": "./node_modules/.bin/npm-run-all -p watch:* browsersync",
    "start": "./node_modules/.bin/npm-run-all -s clean build:sass watch"
  },
  "author": "KATO natsuhiko",
  "license": "MIT",
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "browser-sync": "^2.18.8",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.2"
  }
}
