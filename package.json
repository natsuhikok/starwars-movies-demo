{
  "name": "frontend-boilerplate",
  "config": {
    "styles": {
      "bin": "./node_modules/.bin/node-sass",
      "src": "./src/styles/style.scss",
      "dist": "./public/assets/styles/style.css",
      "options": "--source-map-embed --output-style compressed"
    },
    "images": {
      "minify": "./node_modules/.bin/imagemin",
      "copy": "./node_modules/.bin/copy",
      "dist": "public/assets/images/",
      "src": "src/images/**/*"
    },
    "templates": {
      "bin": "./node_modules/.bin/pug",
      "src": "src/templates/*.pug",
      "dist": "--out public/ --pretty"
    },
    "browsersync": {
      "bin": "./node_modules/.bin/browser-sync"
    },
    "clean": {
      "dist": "./public/"
    },
    "runall": "./node_modules/.bin/npm-run-all",
    "htmlhint": {
      "bin": "./node_modules/.bin/htmlhint",
      "src": "./public/*.html"
    },
    "eslint": {
      "bin": "./node_modules/.bin/eslint",
      "src": "src/scripts/**/* src/scripts/*"
    }
  },
  "scripts": {

    "lint:html": "$npm_package_config_htmlhint_bin $npm_package_config_htmlhint_src || exit 0",
    "lint:js": "$npm_package_config_eslint_bin $npm_package_config_eslint_src || exit 0",
    "lint": "$npm_package_config_runall -s lint:*",
    "minify:images": "$npm_package_config_images_minify $npm_package_config_images_src --out-dir $npm_package_config_images_dist",
    "copy:images": "$npm_package_config_images_copy $npm_package_config_images_src $npm_package_config_images_dist",
    "build:webpack": "webpack -p",
    "watch:webpack": "webpack --watch",
    "build:pug": "$npm_package_config_templates_bin $npm_package_config_templates_src $npm_package_config_templates_dist",
    "watch:pug": "$npm_package_config_templates_bin $npm_package_config_templates_src $npm_package_config_templates_dist --watch",
    "build:sass": " $npm_package_config_styles_bin $npm_package_config_styles_src $npm_package_config_styles_dist $npm_package_config_styles_options",
    "watch:sass": "$npm_package_config_styles_bin $npm_package_config_styles_src $npm_package_config_styles_dist $npm_package_config_styles_options --watch",
    "browsersync": "$npm_package_config_browsersync_bin  start --server 'public/' --files 'public/' --port 3000",
    "clean": "rimraf $npm_package_config_clean_dist",
    "build": "$npm_package_config_runall -s clean minify:images build:*",
    "devbuild": "$npm_package_config_runall -s clean copy:images build:*",
    "watch": "$npm_package_config_runall -p watch:* browsersync",
    "server": "$npm_package_config_runall -s devbuild watch"
  },
  "author": "KATO natsuhiko",
  "license": "MIT",
  "dependencies": {
    "jquery": "^3.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "browser-sync": "^2.18.8",
    "copy": "^0.3.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "htmlhint": "^0.9.13",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.2"
  }
}
